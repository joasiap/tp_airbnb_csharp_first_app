@{
    var reservation = ViewData["reservation"] as Reservation;
}

<div class="container-fluid">

    <h1 class="mt-5 mb-5">Détails d'une réservation</h1>

    <div class="card mx-auto p-3">
        <div class="card-body">
            <h5 class="card-title text-center mb-5">@Html.DisplayFor(modelItem => reservation.Logement.Titre)</h5>
            <div class="row p-3">
                <div class="text-success">@TempData["messageSucces"]</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3">Nombre de personnes:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.Logement.NbPersonnes)</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3">Ville:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.Logement.Adresse.Ville)</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3">Département:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.Logement.Adresse.Departement.Nom)</div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3">Description:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.Logement.Description)</div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-3">Date début:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.DateDebut)</div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-3">Date fin:</div>
                <div class="col-lg-8">@Html.DisplayFor(modelItem => reservation.DateFin)</div>
            </div>

            <div class="text-center mt-5">
                @Html.ActionLink("Retour", "Index", "Home", null, new { @class = "btn btn-secondary" })
            </div>

        </div>
       </div>
</div>